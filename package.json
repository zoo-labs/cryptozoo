{
  "name": "@zoolabs/zoo",
  "version": "1.0.0",
  "author": "Zoo Labs Limited <hi@zoolabs.io> (https://zoolabs.io)",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "react",
    "uniswap",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "build": "yarn workspace @savage/app build --max-old-space-size=12288",
    "clean": "rm -rf packages/app/build && rm -rf packages/contracts/artifacts && rm -rf packages/contracts/cache && rm -rf packages/contracts/types",
    "start": "yarn workspace @savage/app start",
    "account": "yarn workspace @savage/contracts account",
    "accounts": "yarn workspace @savage/contracts accounts",
    "balance": "yarn workspace @savage/contracts balance",
    "chain": "yarn workspace @savage/contracts chain",
    "compile": "yarn workspace @savage/contracts compile",
    "deploy": "yarn workspace @savage/contracts deploy",
    "deploy:game": "yarn workspace @savage/contracts deploy:game",
    "deploy:mainnet": "yarn workspace @savage/contracts mainnet",
    "deploy:testnet": "yarn workspace @savage/contracts testnet",
    "export": "yarn workspace @savage/contracts export",
    "flatten": "cd packages/contracts && npx hardhat flatten",
    "fork": "yarn workspace @savage/contracts fork",
    "fundedwallet": "cd packages/contracts && npx hardhat fundedwallet",
    "generate": "yarn workspace @savage/contracts generate",
    "matrix": "yarn workspace @savage/contracts matrix",
    "mineContractAddress": "cd packages/contracts && npx contracts mineContractAddress",
    "node": "yarn workspace @savage/contracts chain",
    "send": "yarn workspace @savage/contracts send",
    "test": "yarn workspace @savage/contracts test",
    "wallet": "cd packages/contracts && npx contracts wallet",
    "format": "yarn workspace @savage/app format && yarn workspace @savage/contracts format"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
